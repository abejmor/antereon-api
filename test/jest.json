{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".*.spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../src/$1"
  },
  "globalTeardown": "<rootDir>/teardown.ts",
  "globalSetup": "<rootDir>/setup.ts",
  "workerIdleMemoryLimit": "1000MB",
  "clearMocks": true,
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.ts"]
}